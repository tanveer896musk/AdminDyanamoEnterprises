@model AdminDyanamoEnterprises.DTOs.Account.RegisterType
@{
    ViewData["Title"] = "Register";
    Layout = null; // Ensuring no other layout interferes
}

<!DOCTYPE html>
<html lang="en" dir="ltr" data-startbar="light" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dynamo Enterprises</title>
    <link rel="shortcut icon" href="~/images/favicon.ico" />

    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/app.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" asp-append-version="true" />

    <style>
        body {
            background-color: #f0f2f5; /* A light, soft background color */
        }

        .auth-header-box {
            /* Keep existing styles like bg-black, rounded-top */
            padding-top: 1.5rem !important;
            padding-bottom: 1.5rem !important;
        }

        .card-body {
            padding: 2rem; /* Give the card body more breathing room */
        }
        /* Style for validation messages */
        .field-validation-error {
            display: block; /* Ensures it takes full width below the input */
            margin-top: 0.25rem; /* Small space above the error */
            font-size: 0.875em; /* Slightly smaller text */
        }
        /* Ensure the footer is at the bottom of the content */
        .footer {
            /* Ensure fixed-bottom class is NOT applied in HTML */
            /* This CSS is critical if fixed-bottom effect is coming from elsewhere */
            position: relative; /* Override any potential fixed/absolute */
            bottom: auto; /* Reset bottom property */
            padding: 1.5rem 0; /* Add some vertical padding */
            background-color: #f8f9fa; /* Light background for the footer */
            border-top: 1px solid #e9ecef; /* Subtle top border */
            color: #6c757d; /* Muted text color */
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <main class="flex-fill py-5">
     
        <div class="container-xxl">
            <div class="row d-flex justify-content-center">
                <div class="col-12 align-self-center">
                    <div class="row">
                        <div class="col-lg-4 mx-auto">
                            <div class="card shadow-lg border-0 rounded-lg">
                              
                                <div class="card-body p-0 bg-black auth-header-box rounded-top">
                                    <div class="text-center p-3">
                                        <a href="/Account/Login" class="logo logo-admin">
                                        
                                            <img src="~/images/logo-sm.png" height="50" alt="logo" class="auth-logo" />
                                        </a>
                                        <h4 class="mt-3 mb-1 fw-semibold text-white fs-18">Join Dynamo Enterprises</h4>
                                        <p class="text-muted fw-medium mb-0">Create your account to get started.</p>
                                    </div>
                                </div>
                                <div class="card-body pt-0">
                                    @* Validation summary *@
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger text-center mb-3" }) @* Added text-center and mb-3 *@

                                    @using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { @class = "my-4" }))
                                    {
                                        <div class="form-group mb-4">
    <label asp-for="Fullname" class="form-label">Full Name</label>
    @Html.TextBoxFor(model => model.Fullname, new { @class = "form-control", placeholder = "Enter your full name" })
    @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger field-validation-error" })
</div>

<div class="form-group mb-4">
    <label asp-for="Emailid" class="form-label">Email address</label>
    @Html.TextBoxFor(model => model.Emailid, new { @class = "form-control", placeholder = "Enter your email address", type = "email" })
    @Html.ValidationMessageFor(model => model.Emailid, "", new { @class = "text-danger field-validation-error" })
</div>

<div class="form-group mb-4">
    <label asp-for="mobileno" class="form-label">Phone Number</label>
    @Html.TextBoxFor(model => model.mobileno, new { @class = "form-control", placeholder = "Enter your phone number", type = "tel" })
    @Html.ValidationMessageFor(model => model.mobileno, "", new { @class = "text-danger field-validation-error" })
</div>

<div class="form-group mb-4">
    <label asp-for="password" class="form-label">Password</label>
    @Html.PasswordFor(model => model.password, new { @class = "form-control", placeholder = "Enter your password" })
    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger field-validation-error" })
</div>


                                        <div class="form-group mb-0 row">
                                            <div class="col-12">
                                                <div class="d-grid mt-3">
                                                    <button class="btn btn-primary" type="submit">Register <i class="fas fa-user-plus ms-1"></i></button>
                                                </div>
                                            </div>
                                        </div>

                                        <p class="text-center text-muted mt-3 mb-0">Already have an account? <a href="@Url.Action("Login")" class="text-primary ms-1"><b>Log In</b></a></p>
                                    }
                                    
                                       
                                  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer text-center text-sm-start d-print-none py-2">
        <div class="container-fluid">
            <p class="text-muted mb-0">
                © <script>document.write(new Date().getFullYear())</script> Dyanamo enterprises
            </p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/libs/simplebar/simplebar.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>