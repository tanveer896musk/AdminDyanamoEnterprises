@{
    ViewData["Title"] = "Banner Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box d-md-flex justify-content-md-between align-items-center">
                <h4 class="page-title">Banner Management</h4>
                <div>
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Mifty</a></li>
                        <li class="breadcrumb-item"><a href="#">Apps</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Product")">Products</a></li>
                        <li class="breadcrumb-item active">Banner</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Banner Upload Form -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title mb-0">
                                <i class="las la-image me-2"></i>Upload Banner
                            </h4>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form id="bannerForm" enctype="multipart/form-data">
                        <div class="row">
                          
                           

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="las la-sort-numeric-up me-1"></i>Display Order
                                </label>
                                <input type="number" class="form-control" id="displayOrder" name="displayOrder" min="1" value="1" placeholder="Enter display order..." />
                                <small class="text-muted">Order in which banner will be displayed (1 = first)</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="las la-toggle-on me-1"></i>Banner Status
                                </label>
                                <div class="form-check form-switch mt-2">
                                    <input class="form-check-input form-switch-success" type="checkbox" id="isActive" name="isActive" checked />
                                    <label class="form-check-label fw-medium" for="isActive">
                                        <span id="statusText">Active</span>
                                    </label>
                                </div>                           
                            </div>

                            <!-- Banner Image Upload Section -->
                            <div class="col-12 mb-4">
                                <label class="form-label fw-semibold">
                                    <i class="las la-images me-1"></i>Banner Image <span class="text-danger">*</span>
                                </label>
                                <div class="border border-dashed rounded p-4" id="imageUploadArea">
                                    <div class="text-center">
                                        <i class="las la-cloud-upload-alt fs-48 text-muted mb-3 d-block"></i>
                                        <h5 class="mb-2">Drag & Drop Banner Image Here</h5>
                                        <p class="text-muted mb-3">or</p>
                                        <div class="input-group justify-content-center">
                                            <input type="file" class="form-control" id="bannerImage" name="bannerImage" accept="image/*" style="display: none;" required />
                                            <button type="button" class="btn btn-outline-primary" onclick="document.getElementById('bannerImage').click()">
                                                <i class="las la-folder-open me-1"></i>Choose Image
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <small class="text-muted">Upload banner image (JPG, PNG, GIF). Recommended size: 1920x480px. Maximum 5MB.</small>
                                
                                <!-- Image Preview Container -->
                                <div id="imagePreviewContainer" class="mt-3" style="display: none;">
                                    <div class="border rounded p-3 bg-light">
                                        <label class="form-label fw-semibold small">Preview:</label>
                                        <div class="text-center">
                                            <img id="previewImg" src="" alt="Banner Preview" class="img-fluid rounded" style="max-height: 200px; max-width: 100%;" />
                                        </div>
                                        <div class="mt-2 text-center">
                                            <small class="text-muted">
                                                <strong>File:</strong> <span id="fileName"></span> | 
                                                <strong>Size:</strong> <span id="fileSize"></span>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            

                            <!-- Form Actions -->
                            <div class="col-12">
                                <div class="d-flex gap-2 justify-content-end">
                                    <button type="reset" class="btn btn-outline-secondary" id="resetForm">
                                        <i class="las la-undo me-1"></i>Reset Form
                                    </button>
                                    <button type="submit" class="btn btn-primary" id="submitBtn">
                                        <i class="las la-save me-1"></i>Upload Banner
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Banner List -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title mb-0">
                                <i class="las la-list me-2"></i>Banner List
                            </h4>
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-outline-primary btn-sm" id="refreshList">
                                <i class="las la-sync-alt me-1"></i>Refresh
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="bannerTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Image</th>                                   
                                    <th>Order</th>
                                    <th>Status</th>                                 
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="bannerTableBody">
                                <!-- Sample Data - Replace with dynamic data -->
                                <tr>
                                    <td>
                                        <img src="~/images/BannerImage/BI1.jpg" alt="Banner" class="img-thumbnail" style="width: 60px; height: 30px; object-fit: cover;" />
                                    </td>
                                   
                                    <td><span class="badge bg-info">1</span></td>
                                    <td>
                                        <span class="badge bg-success">
                                            <i class="las la-check-circle me-1"></i>Active
                                        </span>
                                    </td>
                                 
                                    <td>
                                        <div class="btn-group btn-group-sm">                                        
                                            <button type="button" class="btn btn-outline-danger" title="Delete">
                                                <i class="las la-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                             
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Empty State -->
                    <div id="emptyState" class="text-center py-5" style="display: none;">
                        <i class="las la-images fs-48 text-muted mb-3 d-block"></i>
                        <h5 class="text-muted">No banners uploaded yet</h5>
                        <p class="text-muted">Upload your first banner image using the form above.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Status toggle functionality
            $('#isActive').on('change', function() {
                $('#statusText').text(this.checked ? 'Active' : 'Inactive');
            });

            // Image upload and preview functionality
            $('#bannerImage').on('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    // Validate file type
                    if (!file.type.startsWith('image/')) {
                        alert('Please select a valid image file (JPG, PNG, GIF)');
                        this.value = '';
                        return;
                    }

                    // Validate file size (max 5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('File size must be less than 5MB');
                        this.value = '';
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#previewImg').attr('src', e.target.result);
                        $('#fileName').text(file.name);
                        $('#fileSize').text(formatFileSize(file.size));
                        $('#imagePreviewContainer').show();
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Format file size
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }

            // Drag and drop functionality
            const uploadArea = $('#imageUploadArea');
            
            uploadArea.on('dragover', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).addClass('border-primary bg-light');
            });

            uploadArea.on('dragleave', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).removeClass('border-primary bg-light');
            });

            uploadArea.on('drop', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).removeClass('border-primary bg-light');
                
                const files = e.originalEvent.dataTransfer.files;
                if (files.length > 0) {
                    const fileInput = document.getElementById('bannerImage');
                    fileInput.files = files;
                    $(fileInput).trigger('change');
                }
            });

            // Form submission
            $('#bannerForm').on('submit', function(e) {
                e.preventDefault();
                
                const formData = new FormData(this);
                const submitBtn = $('#submitBtn');
                const originalText = submitBtn.html();
                
                // Show loading state
                submitBtn.prop('disabled', true).html('<i class="las la-spinner la-spin me-1"></i>Uploading...');
                
                // Simulate form submission (replace with actual AJAX call)
                setTimeout(function() {
                    // Show success message
                    alert('Banner uploaded successfully!');
                    
                    // Reset form
                    $('#bannerForm')[0].reset();
                    $('#imagePreviewContainer').hide();
                    $('#statusText').text('Active');
                    
                    // Reset button
                    submitBtn.prop('disabled', false).html(originalText);
                    
                    // Refresh the banner list (you would call your API here)
                    // refreshBannerList();
                    
                }, 2000);
            });

            // Reset form functionality
            $('#resetForm').on('click', function() {
                $('#imagePreviewContainer').hide();
                $('#statusText').text('Active');
            });

            // Refresh list functionality
            $('#refreshList').on('click', function() {
                const btn = $(this);
                const originalText = btn.html();
                
                btn.prop('disabled', true).html('<i class="las la-spinner la-spin me-1"></i>Refreshing...');
                
                setTimeout(function() {
                    btn.prop('disabled', false).html(originalText);
                    // Here you would reload the banner list from server
                    alert('Banner list refreshed!');
                }, 1000);
            });

            // Delete functionality for banner items
            $(document).on('click', '.btn-outline-danger', function() {
                if (confirm('Are you sure you want to delete this banner?')) {
                    const row = $(this).closest('tr');
                    row.fadeOut(300, function() {
                        $(this).remove();
                        
                        // Check if table is empty
                        if ($('#bannerTableBody tr').length === 0) {
                            $('#emptyState').show();
                            $('#bannerTable').hide();
                        }
                    });
                }
            });
        });
    </script>
}

