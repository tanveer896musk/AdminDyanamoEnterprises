@model AdminDyanamoEnterprises.DTOs.Master.BlogsModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="d-flex justify-content-center align-items-center flex-column">
        <h1 class="mb-4 fw-bold">Change Blog Content</h1>

        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger fw-bold"></div>

                <div class="form-group">
                    <label asp-for="BlogId" class="control-label fw-bold"></label>
                    <input asp-for="BlogId" class="form-control fw-bold" />
                    <span asp-validation-for="BlogId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label fw-bold"></label>
                    <input asp-for="Title" class="form-control fw-bold" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category" class="control-label fw-bold"></label>
                    <input asp-for="Category" class="form-control fw-bold" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PublishDate" class="control-label fw-bold"></label>
                    <input asp-for="PublishDate" class="form-control fw-bold" />
                    <span asp-validation-for="PublishDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label fw-bold"></label>
                    <input asp-for="Description" class="form-control fw-bold" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Author" class="control-label fw-bold"></label>
                    <input asp-for="Author" class="form-control fw-bold" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label fw-bold"></label>
                    <input asp-for="ImageUrl" class="form-control fw-bold" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-2">
                    <label class="form-check-label fw-bold">
                        <input class="form-check-input" asp-for="Published" />
                        @Html.DisplayNameFor(model => model.Published)
                    </label>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary w-100 fw-bold" />
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="List" class="btn btn-success fw-bold">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
