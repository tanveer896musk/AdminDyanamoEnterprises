@model IEnumerable<AdminDyanamoEnterprises.DTOs.Master.BlogsModel>

@{
    ViewData["Title"] = "Blogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

<style>
    .blog-card {
        border-radius: 10px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 0 12px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        padding: 15px;
    }

        .blog-card:hover {
            transform: translateY(-5px);
        }

        .blog-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }

    .badge-category {
        font-size: 0.8rem;
        background-color: #eee;
        border-radius: 5px;
        padding: 2px 8px;
        margin-right: 8px;
    }

    .blog-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 15px;
    }

    .blog-author {
        display: flex;
        align-items: center;
    }

        .blog-author img {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            margin-right: 10px;
        }

    .btn-read-more {
        background-color: #6366f1;
        color: white;
        padding: 6px 12px;
        font-size: 0.9rem;
        border-radius: 5px;
        text-decoration: none;
    }

    .blog-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        margin: 8px 0;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .blog-desc {
        color: #777;
        font-size: 0.95rem;
        height: 60px;
        overflow: hidden;
    }
</style>

<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var blog in Model)
        {
            <div class="col">
                <div class="blog-card h-100">
                    <img src="~/@blog.ImageUrl" alt="@blog.Title" />

                    <div class="mt-2 d-flex align-items-center text-muted">
                        <span class="badge-category bg-light">@blog.Category</span> |
                        <small class="ms-2">@blog.PublishDate.ToString("dd MMM yyyy")</small>
                    </div>

                    <div class="blog-title">@blog.Title</div>

                    <div class="blog-desc">
                        @blog.Description
                    </div>

                    <div class="blog-footer">
                        <div class="blog-author">
                            <img src="https://randomuser.me/api/portraits/men/@(blog.BlogId + 20).jpg" alt="@blog.Author" />
                            <div>
                                <strong>@blog.Author</strong><br />
                                <small class="text-muted">by admin</small>
                            </div>
                        </div>
                        <a class="btn-read-more" href="/Blogs/Edit/@blog.BlogId">Read more ➜</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
