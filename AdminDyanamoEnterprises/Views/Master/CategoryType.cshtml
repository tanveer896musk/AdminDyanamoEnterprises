
@model AdminDyanamoEnterprises.DTOs.CategoryTypePageViewModel

 @{
    ViewData["Title"] = "CategoryType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box d-md-flex justify-content-md-between align-items-center">
                <h4 class="page-title">Category Type</h4>
                <div class="">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a href="#">Mifty</a>
                        </li><!--end nav-item-->
                        <li class="breadcrumb-item">
                            <a href="#">Apps</a>
                        </li><!--end nav-item-->
                        <li class="breadcrumb-item active">Category Type</li>
                    </ol>
                </div>
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div><!--end row-->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="card-body pt-0">
                            @using (Html.BeginForm("CategoryType", "Master", FormMethod.Post))
                            {

                                @Html.AntiForgeryToken()

                                <div class="row align-items-end">
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">@Html.DisplayNameFor(model => model.AddCategory.Name)</label>
                                        @Html.TextBoxFor(model => model.AddCategory.Name, new { @class = "form-control" })
                                    </div>

                                    <div class="col-md-4 mb-3">
                                        <button type="submit" class="btn btn-success">Save</button>
                                    </div>
                                </div>
                            }



                           
                        </div>
                    </div>

                </div>
           
                <div class="card-body pt-0">
                    <div class="table-responsive">
                        <table class="table mb-0 checkbox-all" id="datatable_1">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-0">CategoryID</th>
                                    <th class="ps-0">Category</th>
                                    <th class="ps-0">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.CategoryList != null && Model.CategoryList.Any())
                                {
                                    int i = 1;
                                    foreach (var item in Model.CategoryList)
                                    {
                                       
                                            
                                        
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.Name</td> <!-- You can replace this with a relevant property if needed -->
                                            <td>
                                     
                                                <a href="@Url.Action("")"><i class="las la-pen text-secondary fs-18"></i></a>
                                                <a href="#" class="delete-link" data-id="@item.CategoryID">
                                                    <i class="las la-trash-alt text-secondary fs-18"></i>
                                                </a>

                                        </tr>
                                        i++;
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="2">No categories found.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->
    </div>
    </div>
@section Scripts {
    <script>
        $(document).on('click', '.delete-link', function (e) {
            e.preventDefault();
            let id = $(this).data('id');

            if (confirm("Are you sure you want to delete this category?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "Master")',
                    type: 'POST',
                    data: { id: id },
                    success: function () {
                        alert("Deleted successfully");
                        location.reload();
                    },
                    error: function () {
                        alert("Delete failed");
                    }
                });
            }
        });
    </script>
}

