
@{
    ViewData["Title"] = "CreateProduct";
}


<div class="page-title-box d-md-flex justify-content-md-between align-items-center">
    <h4 class="page-title">Add Product</h4>
    <div>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="#">Mifty</a></li>
            <li class="breadcrumb-item"><a href="#">Apps</a></li>
            <li class="breadcrumb-item active">Add Product</li>
        </ol>
    </div>
</div>



@using (Html.BeginForm("CreateProduct", "Product", FormMethod.Post))
{


    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-body pt-0">
                        <div class="row">
                            <!-- ✅ Important: wrap dropdowns inside this row -->
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Category Type</label>
                                <select id="categoryDropdown1" name="SubAddCategory.CategoryID1" class="form-select">
                                    <option value="">-- Select Category --</option>
                                    <option value="1">Electronics</option>
                                    <option value="2">Clothing</option>
                                    <option value="3">Books</option>
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Sub-Category Type</label>
                                <select id="categoryDropdown2" name="SubAddCategory.CategoryID2" class="form-select">
                                    <option value="">-- Select Category --</option>
                                    <option value="1">Electronics</option>
                                    <option value="2">Clothing</option>
                                    <option value="3">Books</option>
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Material Composition</label>
                                <select id="categoryDropdown3" name="SubAddCategory.CategoryID3" class="form-select">
                                    <option value="">-- Select Category --</option>
                                    <option value="1">Electronics</option>
                                    <option value="2">Clothing</option>
                                    <option value="3">Books</option>
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Fabric</label>
                                <select id="categoryDropdown3" name="SubAddCategory.CategoryID3" class="form-select">
                                    <option value="">-- Select Category --</option>
                                    <option value="1">Electronics</option>
                                    <option value="2">Clothing</option>
                                    <option value="3">Books</option>
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Pattern</label>
                                <select id="categoryDropdown3" name="SubAddCategory.CategoryID3" class="form-select">
                                    <option value="">-- Select Category --</option>
                                    <option value="1">Electronics</option>
                                    <option value="2">Clothing</option>
                                    <option value="3">Books</option>
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">Color</label>
                                <select id="categoryDropdown4" name="SubAddCategory.CategoryID4" class="form-select">
                                    <option value="">-- Select Category --</option>
                                    <option value="1">Electronics</option>
                                    <option value="2">Clothing</option>
                                    <option value="3">Books</option>
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label for="inStock" class="form-label">In Stock</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="las la-boxes"></i> <!-- You can use any Bootstrap icon or font-awesome icon -->
                                    </span>
                                    <input type="number"
                                           class="form-control"
                                           id="inStock"
                                           name="SubAddCategory.InStock"
                                           min="0"
                                           placeholder="Enter available stock"
                                           title="Enter the quantity available in stock" />
                                </div>
                            </div>


                            <div class="col-md-4 mb-3">
                                <label class="form-label">Product Name</label>
                                <input type="text" class="form-control" id="editCategoryName" name="SubAddCategory.SubCategoryName" placeholder="Product Name" />
                            </div>

                            <div class="col-md-4 mb-3">
                                <label for="productPrice" class="form-label">Price (₹)</label>
                                <div class="input-group">
                                    <span class="input-group-text">₹</span>
                                    <input type="number" class="form-control" id="productPrice" name="SubAddCategory.Price"
                                           placeholder="Enter price in INR" min="0" step="0.01" />
                                </div>
                            </div>

                            <div class="col-12 mb-4">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="SubAddCategory.Description" rows="5" placeholder="Enter product description..."></textarea>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-100">Submit</button>
                            </div>


                        </div> <!-- End .row -->
                    </div>
                </div>

                <div class="card-body pt-0">
                    <div class="table-responsive">
                        <table class="table mb-0 checkbox-all" id="datatable_1">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-0">Serial-No</th>
                                    <th class="ps-0">Category</th>
                                    <th class="ps-0">Sub-Category</th>
                                    <th class="ps-0">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Data rows here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

       
}



    


   


